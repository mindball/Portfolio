@model InsuranceCompanyDetailViewModel

@{
    ViewData["Title"] = "Edit insurance company";    
}

<h2>@ViewData["Title"]</h2>

<form method="Post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>    
    <div>
        <input class="btn btn-success" type="submit" value="Save insurance company" />
    </div>
</form>