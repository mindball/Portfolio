@model BranchDetailViewModel

@{
    ViewData["Title"] = "Edit branch";    
}

<h2>@ViewData["Title"]</h2>

<form method="Post">
    <div class="form-group">
        <label asp-for="Town">Name</label>
        <input asp-for="Town" class="form-control">
        <span asp-validation-for="Town" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Customer birthday</label>
        <input asp-for="Address" class="form-control">
        <span asp-validation-for="Address" class="form-text text-danger"></span>
    </div>    
    <div>
        <input class="btn btn-success" type="submit" value="Save branch" />
    </div>
</form>