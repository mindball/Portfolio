@model ListExpireDataForAllBranchesViewModel
@{
    ViewData["Title"] = Model.FullAddress + " " + Model.TypeOfExpire;
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Vin</th>
            <th>Plate number</th>
            <th>Type Insurance</th>
            <th>Expire date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model.VehiclesWithExpirePolicy)
        {
            @foreach (var insurance in vehicle.InsurancePolicies)
            {
                <tr>
                    <td>@vehicle.Vin</td>
                    <td>@vehicle.PlateNumber</td>
                    <td>@insurance.TypeInsurance</td>
                    <td>@insurance.EndDate</td>
                    <td>
                        <a href="/insurancespolices/Details/@vehicle.VehicleId" class="btn btn-info btn-sm">Edit</a> 
                    </td>
                </tr>
            }
        }
    </tbody>
</table>